{
  "id": "geode-1.4",
  "library_group": "geode",
  "description": "This instrumentation enables database client spans and database client metrics for Apache Geode cache operations.",
  "library_link": "https://geode.apache.org/",
  "source_path": "instrumentation/geode-1.4",
  "semantic_conventions": [
    "DATABASE_CLIENT_SPANS",
    "DATABASE_CLIENT_METRICS"
  ],
  "scope": {
    "name": "io.opentelemetry.geode-1.4"
  },
  "configurations": [
    {
      "name": "otel.instrumentation.common.db-statement-sanitizer.enabled",
      "description": "Enables statement sanitization for database queries.",
      "type": "boolean",
      "default": true
    }
  ],
  "telemetry": {
    "default": {
      "metrics": [],
      "spans": [
        {
          "span_kind": "CLIENT",
          "attributes": [
            {
              "name": "db.name",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "db.operation",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "db.statement",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "db.system",
              "type": "STRING",
              "semconv": false
            }
          ]
        }
      ]
    },
    "otel.semconv-stability.opt-in=database": {
      "metrics": [
        {
          "name": "db.client.operation.duration",
          "description": "Duration of database client operations.",
          "type": "HISTOGRAM",
          "unit": "s",
          "attributes": [
            {
              "name": "db.namespace",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "db.operation.name",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "db.system.name",
              "type": "STRING",
              "semconv": false
            }
          ]
        }
      ],
      "spans": [
        {
          "span_kind": "CLIENT",
          "attributes": [
            {
              "name": "db.namespace",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "db.operation.name",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "db.query.text",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "db.system.name",
              "type": "STRING",
              "semconv": false
            }
          ]
        }
      ]
    }
  }
}