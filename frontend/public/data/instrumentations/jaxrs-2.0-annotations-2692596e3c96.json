{
  "id": "jaxrs-2.0-annotations",
  "display_name": "JAX-RS 2.x",
  "library_group": "jaxrs",
  "description": "This instrumentation enriches HTTP server spans with route information, and enables controller spans for JAX-RS annotated methods (controller spans are disabled by default).\n",
  "library_link": "https://javaee.github.io/javaee-spec/javadocs/javax/ws/rs/package-summary.html",
  "source_path": "instrumentation/jaxrs/jaxrs-2.0/jaxrs-2.0-annotations",
  "features": [
    "HTTP_ROUTE",
    "CONTROLLER_SPANS"
  ],
  "disabled_by_default": true,
  "scope": {
    "name": "io.opentelemetry.jaxrs-2.0-annotations"
  },
  "configurations": [
    {
      "name": "otel.instrumentation.common.experimental.controller-telemetry.enabled",
      "description": "Enables the creation of experimental controller spans.",
      "type": "boolean",
      "default": false
    },
    {
      "name": "otel.instrumentation.jaxrs.experimental-span-attributes",
      "description": "Enables the experimental `jaxrs.canceled` span attribute.",
      "type": "boolean",
      "default": false
    }
  ],
  "telemetry": {
    "default": {
      "metrics": [],
      "spans": [
        {
          "span_kind": "INTERNAL",
          "attributes": [
            {
              "name": "code.function",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "code.namespace",
              "type": "STRING",
              "semconv": true
            }
          ]
        }
      ]
    }
  }
}