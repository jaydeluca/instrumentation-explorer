{
  "id": "servlet-2.2",
  "display_name": "Servlet",
  "library_group": "servlet",
  "description": "This instrumentation enables HTTP server spans and metrics for Java Servlet API.",
  "library_link": "https://javaee.github.io/servlet-spec/",
  "source_path": "instrumentation/servlet/servlet-2.2",
  "semantic_conventions": [
    "HTTP_SERVER_SPANS",
    "HTTP_SERVER_METRICS"
  ],
  "features": [
    "HTTP_ROUTE"
  ],
  "scope": {
    "name": "io.opentelemetry.servlet-2.2"
  },
  "configurations": [
    {
      "name": "otel.instrumentation.servlet.experimental-span-attributes",
      "description": "Enables capturing the experimental `servlet.timeout` span attribute.",
      "type": "boolean",
      "default": false
    },
    {
      "name": "otel.instrumentation.servlet.capture-request-parameters",
      "description": "List of request parameter names to capture as span attributes.",
      "type": "list",
      "default": ""
    },
    {
      "name": "otel.instrumentation.servlet.add-trace-id-request-attribute",
      "description": "Adds the trace ID and span ID as a request attributes for downstream servlet access.",
      "type": "boolean",
      "default": true
    }
  ],
  "telemetry": {
    "default": {
      "metrics": [
        {
          "name": "http.server.request.duration",
          "description": "Duration of HTTP server requests.",
          "type": "HISTOGRAM",
          "unit": "s",
          "attributes": [
            {
              "name": "http.request.method",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "http.response.status_code",
              "type": "LONG",
              "semconv": true
            },
            {
              "name": "network.protocol.version",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "url.scheme",
              "type": "STRING",
              "semconv": true
            }
          ]
        }
      ],
      "spans": [
        {
          "span_kind": "INTERNAL",
          "attributes": [
            {
              "name": "code.function",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "code.namespace",
              "type": "STRING",
              "semconv": true
            }
          ]
        },
        {
          "span_kind": "SERVER",
          "attributes": [
            {
              "name": "client.address",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "error.type",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "http.request.method",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "http.request.method_original",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "http.response.status_code",
              "type": "LONG",
              "semconv": true
            },
            {
              "name": "network.peer.address",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "network.protocol.version",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "server.address",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "server.port",
              "type": "LONG",
              "semconv": true
            },
            {
              "name": "url.path",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "url.query",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "url.scheme",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "user_agent.original",
              "type": "STRING",
              "semconv": true
            }
          ]
        }
      ]
    }
  }
}