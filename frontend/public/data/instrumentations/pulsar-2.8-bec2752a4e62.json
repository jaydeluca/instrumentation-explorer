{
  "id": "pulsar-2.8",
  "display_name": "Apache Pulsar Client",
  "library_group": "pulsar",
  "description": "This instrumentation enables messaging spans for Apache Pulsar message producers and consumers.\n",
  "library_link": "https://pulsar.apache.org/",
  "source_path": "instrumentation/pulsar/pulsar-2.8",
  "semantic_conventions": [
    "MESSAGING_SPANS"
  ],
  "scope": {
    "name": "io.opentelemetry.pulsar-2.8"
  },
  "javaagent_target_versions": [
    "org.apache.pulsar:pulsar-client:[2.8.0,)"
  ],
  "configurations": [
    {
      "name": "otel.instrumentation.messaging.experimental.receive-telemetry.enabled",
      "description": "Enables experimental receive telemetry, which will cause consumers to start a new trace, with only a span link connecting it to the producer trace.\n",
      "type": "boolean",
      "default": false
    },
    {
      "name": "otel.instrumentation.messaging.experimental.capture-headers",
      "description": "Enables capturing messaging headers as span attributes. Provide a comma-separated list of header names to capture.\n",
      "type": "list",
      "default": ""
    },
    {
      "name": "otel.instrumentation.pulsar.experimental-span-attributes",
      "description": "Enables the experimental span attribute `messaging.pulsar.message.type` for producer spans.\n",
      "type": "boolean",
      "default": false
    }
  ],
  "telemetry": {
    "default": {
      "metrics": [
        {
          "name": "messaging.publish.duration",
          "description": "Measures the duration of publish operation.",
          "type": "HISTOGRAM",
          "unit": "s",
          "attributes": [
            {
              "name": "messaging.destination.name",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "messaging.operation",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "messaging.system",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "server.address",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "server.port",
              "type": "LONG",
              "semconv": true
            }
          ]
        },
        {
          "name": "messaging.receive.duration",
          "description": "Measures the duration of receive operation.",
          "type": "HISTOGRAM",
          "unit": "s",
