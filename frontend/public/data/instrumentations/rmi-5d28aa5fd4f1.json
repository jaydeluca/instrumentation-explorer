{
  "id": "rmi",
  "display_name": "RMI (Remote Method Invocation)",
  "library_group": "rmi",
  "description": "This instrumentation enables RPC client spans and RPC server spans for Java RMI (Remote Method Invocation).\n",
  "library_link": "https://docs.oracle.com/en/java/javase/17/docs/api/java.rmi/java/rmi/package-summary.html",
  "source_path": "instrumentation/rmi",
  "semantic_conventions": [
    "RPC_CLIENT_SPANS",
    "RPC_SERVER_SPANS"
  ],
  "scope": {
    "name": "io.opentelemetry.rmi"
  },
  "javaagent_target_versions": [
    "Java 8+"
  ],
  "telemetry": {
    "default": {
      "metrics": [],
      "spans": [
        {
          "span_kind": "CLIENT",
          "attributes": [
            {
              "name": "rpc.method",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "rpc.service",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "rpc.system",
              "type": "STRING",
              "semconv": true
            }
          ]
        },
        {
          "span_kind": "SERVER",
          "attributes": [
            {
              "name": "rpc.method",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "rpc.service",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "rpc.system",
              "type": "STRING",
              "semconv": true
            }
          ]
        }
      ]
    }
  }
}