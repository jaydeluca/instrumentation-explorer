{
  "id": "jaxrs-3.0-annotations",
  "display_name": "JAX-RS 3.x",
  "library_group": "jaxrs",
  "description": "This instrumentation enriches HTTP server spans with route information, and enables controller spans for JAX-RS annotated methods (controller spans are disabled by default).\n",
  "library_link": "https://jakarta.ee/specifications/restful-ws/3.0/",
  "source_path": "instrumentation/jaxrs/jaxrs-3.0/jaxrs-3.0-annotations",
  "features": [
    "HTTP_ROUTE",
    "CONTROLLER_SPANS"
  ],
  "scope": {
    "name": "io.opentelemetry.jaxrs-3.0-annotations"
  },
  "target_versions": {
    "javaagent": [
      "jakarta.ws.rs:jakarta.ws.rs-api:[3.0.0,)"
    ]
  },
  "configurations": [
    {
      "name": "otel.instrumentation.common.experimental.controller-telemetry.enabled",
      "description": "Enables the creation of experimental controller spans.",
      "type": "boolean",
      "default": false
    },
    {
      "name": "otel.instrumentation.jaxrs.experimental-span-attributes",
      "description": "Enables the experimental `jaxrs.canceled` span attribute.",
      "type": "boolean",
      "default": false
    }
  ],
  "telemetry": {
    "default": {
      "metrics": [],
      "spans": [
        {
          "span_kind": "INTERNAL",
          "attributes": [
            {
              "name": "code.function",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "code.namespace",
              "type": "STRING",
              "semconv": true
            }
          ]
        }
      ]
    }
  }
}