{
  "id": "tomcat-jdbc",
  "library_group": "tomcat",
  "source_path": "instrumentation/tomcat/tomcat-jdbc",
  "scope": {
    "name": "io.opentelemetry.tomcat-jdbc"
  },
  "target_versions": {
    "javaagent": [
      "org.apache.tomcat:tomcat-jdbc:[8.5.0,)"
    ]
  },
  "telemetry": {
    "default": {
      "metrics": [
        {
          "name": "db.client.connections.idle.max",
          "description": "The maximum number of idle open connections allowed.",
          "type": "LONG_SUM",
          "unit": "connections",
          "attributes": [
            {
              "name": "pool.name",
              "type": "STRING",
              "semconv": false
            }
          ]
        },
        {
          "name": "db.client.connections.idle.min",
          "description": "The minimum number of idle open connections allowed.",
          "type": "LONG_SUM",
          "unit": "connections",
          "attributes": [
            {
              "name": "pool.name",
              "type": "STRING",
              "semconv": false
            }
          ]
        },
        {
          "name": "db.client.connections.max",
          "description": "The maximum number of open connections allowed.",
          "type": "LONG_SUM",
          "unit": "connections",
          "attributes": [
            {
              "name": "pool.name",
              "type": "STRING",
              "semconv": false
            }
          ]
        },
        {
          "name": "db.client.connections.pending_requests",
          "description": "The number of pending requests for an open connection, cumulative for the entire pool.",
          "type": "LONG_SUM",
          "unit": "requests",
          "attributes": [
            {
              "name": "pool.name",
              "type": "STRING",
              "semconv": false
            }
          ]
        },
        {
          "name": "db.client.connections.usage",
          "description": "The number of connections that are currently in state described by the state attribute.",
          "type": "LONG_SUM",
          "unit": "connections",
          "attributes": [
            {
              "name": "pool.name",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "state",
              "type": "STRING",
              "semconv": false
            }
          ]
        }
      ],
      "spans": []
    },
    "otel.semconv-stability.opt-in=database": {
      "metrics": [
        {
          "name": "db.client.connection.count",
          "description": "The number of connections that are currently in state described by the state attribute.",
          "type": "LONG_SUM",
          "unit": "connection",
          "attributes": [
            {
              "name": "db.client.connection.pool.name",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "db.client.connection.state",
              "type": "STRING",
              "semconv": true
            }
          ]
        },
        {
          "name": "db.client.connection.idle.max",
          "description": "The maximum number of idle open connections allowed.",
          "type": "LONG_SUM",
          "unit": "connection",
          "attributes": [
            {
              "name": "db.client.connection.pool.name",
              "type": "STRING",
              "semconv": true
            }
          ]
        },
        {
          "name": "db.client.connection.idle.min",
          "description": "The minimum number of idle open connections allowed.",
          "type": "LONG_SUM",
          "unit": "connection",
          "attributes": [
            {
              "name": "db.client.connection.pool.name",
              "type": "STRING",
              "semconv": true
            }
          ]
        },
        {
          "name": "db.client.connection.max",
          "description": "The maximum number of open connections allowed.",
          "type": "LONG_SUM",
          "unit": "connection",
          "attributes": [
            {
              "name": "db.client.connection.pool.name",
              "type": "STRING",
              "semconv": true
            }
          ]
        },
        {
          "name": "db.client.connection.pending_requests",
          "description": "The number of current pending requests for an open connection.",
          "type": "LONG_SUM",
          "unit": "request",
          "attributes": [
            {
              "name": "db.client.connection.pool.name",
              "type": "STRING",
              "semconv": true
            }
          ]
        }
      ],
      "spans": []
    }
  }
}