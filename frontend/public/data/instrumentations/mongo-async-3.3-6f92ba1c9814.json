{
  "id": "mongo-async-3.3",
  "display_name": "MongoDB Driver (Async)",
  "library_group": "mongo",
  "description": "This instrumentation enables database client spans and database client metrics for the MongoDB async Java driver.\n",
  "library_link": "https://www.mongodb.com/docs/drivers/java-drivers/",
  "source_path": "instrumentation/mongo/mongo-async-3.3",
  "semantic_conventions": [
    "DATABASE_CLIENT_SPANS",
    "DATABASE_CLIENT_METRICS"
  ],
  "scope": {
    "name": "io.opentelemetry.mongo-async-3.3"
  },
  "target_versions": {
    "javaagent": [
      "org.mongodb:mongodb-driver-async:[3.3,)"
    ]
  },
  "configurations": [
    {
      "name": "otel.instrumentation.mongo.statement-sanitizer.enabled",
      "description": "Enables statement sanitization for MongoDB queries. Takes precedence over otel.instrumentation.common.db-statement-sanitizer.enabled.\n",
      "type": "boolean",
      "default": true
    },
    {
      "name": "otel.instrumentation.common.db-statement-sanitizer.enabled",
      "description": "Enables statement sanitization for database queries.",
      "type": "boolean",
      "default": true
    }
  ],
  "telemetry": {
    "default": {
      "metrics": [],
      "spans": [
        {
          "span_kind": "CLIENT",
          "attributes": [
            {
              "name": "db.connection_string",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "db.mongodb.collection",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "db.name",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "db.operation",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "db.statement",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "db.system",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "server.address",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "server.port",
              "type": "LONG",
              "semconv": true
            }
          ]
        }
      ]
    },
    "otel.semconv-stability.opt-in=database": {
      "metrics": [
        {
          "name": "db.client.operation.duration",
          "description": "Duration of database client operations.",
          "type": "HISTOGRAM",
          "unit": "s",
          "attributes": [
            {
              "name": "db.collection.name",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "db.namespace",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "db.operation.name",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "db.system.name",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "server.address",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "server.port",
              "type": "LONG",
              "semconv": true
            }
          ]
        }
      ],
      "spans": [
        {
          "span_kind": "CLIENT",
          "attributes": [
            {
              "name": "db.collection.name",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "db.namespace",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "db.operation.name",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "db.query.text",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "db.system.name",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "server.address",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "server.port",
              "type": "LONG",
              "semconv": true
            }
          ]
        }
      ]
    }
  }
}