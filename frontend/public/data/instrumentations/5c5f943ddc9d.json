{
  "id": "influxdb-2.4",
  "display_name": "InfluxDB Client",
  "library_group": "influxdb",
  "description": "This instrumentation enables database client spans and metrics for the InfluxDB Java client.",
  "library_link": "https://github.com/influxdata/influxdb-java",
  "source_path": "instrumentation/influxdb-2.4",
  "semantic_conventions": [
    "DATABASE_CLIENT_SPANS",
    "DATABASE_CLIENT_METRICS"
  ],
  "scope": {
    "name": "io.opentelemetry.influxdb-2.4"
  },
  "target_versions": {
    "javaagent": [
      "org.influxdb:influxdb-java:[2.4,)"
    ]
  },
  "configurations": [
    {
      "name": "otel.instrumentation.common.db-statement-sanitizer.enabled",
      "description": "Enables or disables statement sanitization for database queries.",
      "type": "boolean",
      "default": true
    }
  ],
  "telemetry": {
    "default": {
      "metrics": [],
      "spans": [
        {
          "span_kind": "CLIENT",
          "attributes": [
            {
              "name": "db.name",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "db.operation",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "db.statement",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "db.system",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "server.address",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "server.port",
              "type": "LONG",
              "semconv": true
            }
          ]
        }
      ]
    },
    "otel.semconv-stability.opt-in=database": {
      "metrics": [
        {
          "name": "db.client.operation.duration",
          "description": "Duration of database client operations.",
          "type": "HISTOGRAM",
          "unit": "s",
          "attributes": [
            {
              "name": "db.namespace",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "db.operation.name",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "db.system.name",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "server.address",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "server.port",
              "type": "LONG",
              "semconv": true
            }
          ]
        }
      ],
      "spans": [
        {
          "span_kind": "CLIENT",
          "attributes": [
            {
              "name": "db.namespace",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "db.operation.name",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "db.query.text",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "db.system.name",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "server.address",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "server.port",
              "type": "LONG",
              "semconv": true
            }
          ]
        }
      ]
    }
  }
}