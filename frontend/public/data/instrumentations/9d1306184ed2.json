{
  "id": "kafka-clients-0.11",
  "display_name": "Apache Kafka Client",
  "library_group": "kafka",
  "description": "This instrumentation enables messaging spans for Kafka producers and consumers, and collects internal Kafka client metrics.",
  "library_link": "https://kafka.apache.org/",
  "source_path": "instrumentation/kafka/kafka-clients/kafka-clients-0.11",
  "semantic_conventions": [
    "MESSAGING_SPANS"
  ],
  "scope": {
    "name": "io.opentelemetry.kafka-clients-0.11"
  },
  "target_versions": {
    "javaagent": [
      "org.apache.kafka:kafka-clients:[0.11.0.0,)"
    ]
  },
  "configurations": [
    {
      "name": "otel.instrumentation.kafka.producer-propagation.enabled",
      "description": "Enable context propagation for Kafka message producers.",
      "type": "boolean",
      "default": true
    },
    {
      "name": "otel.instrumentation.kafka.experimental-span-attributes",
      "description": "Enables the capture of the experimental consumer attribute `kafka.record.queue_time_ms`.",
      "type": "boolean",
      "default": false
    },
    {
      "name": "otel.instrumentation.messaging.experimental.capture-headers",
      "description": "A comma-separated list of header names to capture as span attributes.",
      "type": "list",
      "default": ""
    },
    {
      "name": "otel.instrumentation.messaging.experimental.receive-telemetry.enabled",
      "description": "Enables experimental receive telemetry, which will cause consumers to start a new trace, with only a span link connecting it to the producer trace.\n",
      "type": "boolean",
      "default": false
    }
  ],
  "telemetry": {
    "default": {
      "metrics": [],
      "spans": [
        {
          "span_kind": "CONSUMER",
          "attributes": [
            {
              "name": "messaging.batch.message_count",
              "type": "LONG",
              "semconv": true
            },
            {
              "name": "messaging.client_id",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "messaging.destination.name",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "messaging.destination.partition.id",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "messaging.kafka.consumer.group",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "messaging.kafka.message.key",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "messaging.kafka.message.offset",
              "type": "LONG",
              "semconv": false
            },
            {
              "name": "messaging.kafka.message.tombstone",
              "type": "BOOLEAN",
              "semconv": true
            },
            {
              "name": "messaging.message.body.size",
              "type": "LONG",
              "semconv": true
            },
            {
              "name": "messaging.operation",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "messaging.system",
              "type": "STRING",
              "semconv": true
            }
          ]
        },
        {
          "span_kind": "PRODUCER",
          "attributes": [
            {
              "name": "messaging.client_id",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "messaging.destination.name",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "messaging.destination.partition.id",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "messaging.kafka.message.key",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "messaging.kafka.message.offset",
              "type": "LONG",
              "semconv": false
            },
            {
              "name": "messaging.kafka.message.tombstone",
              "type": "BOOLEAN",
              "semconv": true
            },
            {
              "name": "messaging.operation",
              "type": "STRING",
              "semconv": false
            },
            {
              "name": "messaging.system",
              "type": "STRING",
              "semconv": true
            }
          ]
        }
      ]
    }
  }
}