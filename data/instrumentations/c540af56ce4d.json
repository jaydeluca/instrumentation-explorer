{
  "id": "grails-3.0",
  "library_group": "grails",
  "description": "This instrumentation enriches HTTP server spans with route information, and enables controller spans for Grails applications (controller spans are disabled by default).\n",
  "library_link": "https://grails.apache.org/",
  "source_path": "instrumentation/grails-3.0",
  "features": [
    "HTTP_ROUTE",
    "CONTROLLER_SPANS"
  ],
  "scope": {
    "name": "io.opentelemetry.grails-3.0"
  },
  "target_versions": {
    "javaagent": [
      "org.grails:grails-web-url-mappings:[3.0,)"
    ]
  },
  "configurations": [
    {
      "name": "otel.instrumentation.common.experimental.controller-telemetry.enabled",
      "description": "Enables the creation of experimental controller spans.",
      "type": "boolean",
      "default": false
    }
  ],
  "telemetry": {
    "otel.instrumentation.common.experimental.controller-telemetry.enabled=true": {
      "metrics": [],
      "spans": [
        {
          "span_kind": "INTERNAL",
          "attributes": [
            {
              "name": "code.function",
              "type": "STRING",
              "semconv": true
            },
            {
              "name": "code.namespace",
              "type": "STRING",
              "semconv": true
            }
          ]
        }
      ]
    }
  }
}